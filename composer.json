{
    "name": "noxomix/creem-php",
    "description": "Framework-agnostic Creem PHP SDK core.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "creem",
        "php",
        "sdk"
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.9",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5 || ^11.5 || ^12.0"
    },
    "autoload": {
        "psr-4": {
            "Noxomix\\CreemPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Noxomix\\CreemPhp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
